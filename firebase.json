
{
  "hosting": {
    "source": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "frameworksBackend": {
      "region": "us-central1"
    }
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "emulators": {
    "hosting": {
      "port": 5003,
      "host": "127.0.0.1"
    },
    "functions": {
      "port": 5004,
      "host": "127.0.0.1"
    },
    "ui": {
      "enabled": true,
      "port": 4002,
      "host": "127.0.0.1"
    },
    "auth": {
      "port": 9100,
      "host": "127.0.0.1"
    },
    "firestore": {
      "port": 8083,
      "host": "127.0.0.1"
    },
    "storage": {
      "port": 9198,
      "host": "127.0.0.1",
      "rules": "storage.rules"
    },
    "database": {
      "port": 9012,
      "host": "127.0.0.1"
    },
    "hub": {
      "port": 4401,
      "host": "127.0.0.1"
    },
    "logging": {
      "port": 4501,
      "host": "127.0.0.1"
    },
    "eventarc": {
      "host": "127.0.0.1",
      "port": 9299
    },
    "pubsub": {
      "host": "127.0.0.1",
      "port": 8085
    },
    "extensions": {}
  }
}
